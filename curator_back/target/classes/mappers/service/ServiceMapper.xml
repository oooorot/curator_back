<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.root.mybatis.service.ServiceMapper">

	
<resultMap type="com.web.root.service.dto.ServiceDTO" id="service">
	<id property="helpSeq" column="help_seq"/>
	<result property="memberSeq" column="member_seq"/>
	<result property="helpTitle" column="help_title"/>
	<result property="helpContent" column="help_content"/>
	<result property="helpDate" column="help_date"/>
</resultMap>

<select id="helpAllList" resultMap="service">
	SELECT * FROM help ORDER BY help_seq DESC
</select>

<select id="helpView" resultMap="service">
	SELECT * FROM help WHERE help_seq=#{helpSeq}
</select>


<insert id="helpWrite">
	INSERT INTO help VALUES(help_seq.NEXTVAL, memberSeq, helpTitle, helpContent, CURRENT_DATE)
</insert>

<select id="updateHelpView" resultMap="service">
	SELECT * FROM help WHERE help_seq=#{helpSeq}
</select>
	
<update id="helpUpdate">
	UPDATE help SET help_title=#{helpTitle}, help_Content=#{helpContent} WHERE help_seq=#{helpSeq}
</update>

<delete id="helpDelete">
	DELETE FROM commission WHERE help_seq=#{helpSeq}
</delete>

</mapper>


















